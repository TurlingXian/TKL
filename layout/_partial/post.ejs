<% permalink = config.url + config.root + post.path %>
<section id="intro">
    <div class="container">
        <div class="row col-md-offset-2">
            <div class="col-md-8">
    			<%- partial('post/meta') %>
                <h1><%- post.title %></h1>
            </div>
        </div>
        <div class="col-md-8 col-md-offset-2">
              <%- post.content %>
              
            <div class="clearfix"></div>
            <hr class="nogutter">
            <% if (post.comments){ %>
            <%- partial('post/livere') %>
            <% } else { %>
                <div class="lv-container"></div>
            <% } %>
        </div>
        <%- partial('post/navigation') %>
        <div class="col-md-8 col-md-offset-2 col-sm-24"><%- partial('post/comments') %></div>
    </div>
</section>
